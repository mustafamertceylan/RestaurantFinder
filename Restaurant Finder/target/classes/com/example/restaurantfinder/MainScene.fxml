<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.restaurantfinder.controller.MainSceneController">

   <HBox spacing="10">
      <Button text="Distance" onAction="#handleSortByDistance" />
      <Button text="Rating" onAction="#handleSortByRating" />
   </HBox>

   <SplitPane dividerPositions="0.7">
      <WebView fx:id="mapWebView" />
      <ListView fx:id="restaurantListView" />
   </SplitPane>
</VBox>
